setup_docker_alias() {
    # Check if docker command exists
    if command -v docker >/dev/null 2>&1; then
        # Docker found, do nothing
        return 0
    fi
    
    # Docker not found, check for alternatives in order of preference
    if command -v podman >/dev/null 2>&1; then
        alias docker='podman'
    elif command -v nerdctl >/dev/null 2>&1; then
        alias docker='nerdctl'
    fi
}
# Call the function to set up the alias
setup_docker_alias

update_bashrc_scripts() {
cd ${HOME}/.bashrc.d
for FILE in $(ls)
do
  curl -o ~/.bashrc.d/${FILE} https://raw.githubusercontent.com/cloudxabide/devops/main/Files/.bashrc.d_${FILE}
done
}


